# Stock Predictor Environment Variables
# =====================================
# Copy this file to .env and fill in your API keys

# Financial Data APIs
# -------------------
# Finnhub - Real-time stock quotes
# Get your free key at: https://finnhub.io/
FINNHUB_API_KEY=your_finnhub_api_key_here

# Alpaca - Historical price data
# Get your free key at: https://alpaca.markets/
ALPACA_API_KEY_ID=your_alpaca_key_id_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here

# Polygon.io - Additional market data (optional)
# Get your free key at: https://polygon.io/
POLYGON_API_KEY=your_polygon_api_key_here

# Marketaux - News articles for sentiment analysis (optional)
# Get your free key at: https://www.marketaux.com/
MARKETAUX_API_KEY=your_marketaux_api_key_here

# AI/ML APIs (optional - for advanced features)
# ---------------------------------------------
# OpenAI - For AI-powered analysis (optional)
OPENAI_API_KEY=your_openai_api_key_here

# Server Configuration
# --------------------
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# Model Configuration
# -------------------
MODEL_PATH=models/saved/
SEQUENCE_LENGTH=60
TRAIN_WINDOW_SIZE=252
TEST_WINDOW_SIZE=21
